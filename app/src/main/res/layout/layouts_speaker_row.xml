<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10"
        android:background="#f5f5f5"
        android:elevation="@dimen/margin10"
        app:cardCornerRadius="@dimen/margin5"
        app:cardElevation="@dimen/margin10"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin10"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_speakername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginTop="@dimen/margin5"
                android:layout_marginBottom="@dimen/margin5"
                android:drawableLeft="@drawable/ic_politician"
                android:drawablePadding="@dimen/margin5"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginTop="@dimen/margin5"
                android:layout_marginBottom="@dimen/margin5"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="@dimen/margin5"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_gmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginTop="@dimen/margin5"
                android:layout_marginBottom="@dimen/margin5"
                android:drawableLeft="@drawable/ic_gmail"
                android:drawablePadding="@dimen/margin5"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize15" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginTop="@dimen/margin5"
                android:layout_marginBottom="@dimen/margin5"
                android:drawableLeft="@drawable/ic_pin"
                android:drawablePadding="@dimen/margin5"
                android:textColor="@color/black"

                android:textSize="@dimen/textsize15" />

            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginRight="@dimen/margin5"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="summary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin5">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_marginTop="@dimen/margin5"
                    android:layout_marginBottom="@dimen/margin5"
                    android:drawableLeft="@drawable/ic_session"
                    android:drawablePadding="@dimen/margin5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize15" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_session_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

