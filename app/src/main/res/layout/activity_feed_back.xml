<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FeedBackActivity"
    tools:ignore="MissingPrefix">

    <include layout="@layout/toolbar"
        android:id="@+id/ll_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="6dp"
                android:text="How we serve on punctuality?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/font_black_0" />

            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/crb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                app:srb_stepSize="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="6dp"
                android:text="How hygienic we are?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/font_black_0" />

            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/crb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                app:srb_stepSize="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="6dp"
                android:text="Prompt and quality?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/font_black_0" />

            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/crb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                app:srb_stepSize="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="6dp"
                android:text="Overall ECCA management?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/font_black_0" />

            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/crb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                app:srb_stepSize="0.5" />

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/write_your_feedback"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress" />


            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_submit_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin30"
                android:layout_marginTop="@dimen/margin20"
                android:layout_marginRight="@dimen/margin30"
                android:background="@color/black"
                android:text="@string/submit"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize15"
                android:textStyle="bold"
                android:imeOptions="actionDone"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>