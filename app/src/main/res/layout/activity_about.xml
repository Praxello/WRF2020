<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AboutActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar_about"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_first_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin30"
                android:layout_marginRight="@dimen/margin30" />

            <ImageView
                android:id="@+id/iv_second_image"
                android:layout_width="@dimen/margin150"
                android:layout_height="@dimen/margin200"
                android:layout_marginTop="-30dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_conference_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin15"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin15"
                android:textSize="@dimen/textsize18"
                android:drawableLeft="@drawable/ic_pin"
                android:drawablePadding="@dimen/margin10"
                android:textColor="@color/grey700" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_getdirections"
                android:layout_width="@dimen/margin150"
                android:layout_height="@dimen/margin30"
                android:layout_marginTop="@dimen/margin10"
                android:background="@drawable/oval"
                android:text="@string/get_directions"
                android:textAllCaps="false"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/margin15"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin15"
                android:textSize="@dimen/textsize18"
                android:textColor="@color/grey700"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>