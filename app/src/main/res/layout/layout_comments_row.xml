<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView

        android:layout_width="@dimen/margin200"
        android:layout_height="wrap_content"
        android:elevation="@dimen/margin10"
        app:cardBackgroundColor="@color/grey50"
        android:layout_marginBottom="@dimen/margin10"
        app:cardCornerRadius="@dimen/margin15">

        <LinearLayout
            android:id="@+id/ll_othercomments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:background="@color/grey50"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin5"
                android:text="John Doe"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_commentmessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin15"
                android:text="@string/comment" />

            <TextView
                android:id="@+id/tv_commenttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:textSize="@dimen/textsize10"
                android:layout_marginLeft="@dimen/margin15"
                android:text="@string/comment" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_delete"
        android:layout_width="@dimen/margin200"
        android:layout_height="wrap_content"
        android:elevation="@dimen/margin10"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/margin10"
        app:cardBackgroundColor="@color/grey50"
        app:cardCornerRadius="@dimen/margin15">

        <LinearLayout
            android:id="@+id/ll_ourowncomments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="@dimen/margin5"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_our_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin5"
                android:text=""
                android:layout_gravity="left"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_our_commentmessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_gravity="left"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/margin5"
                android:text="@string/comment" />

            <TextView
                android:id="@+id/tv_our_commenttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="@dimen/textsize10"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_marginBottom="@dimen/margin5"
                android:text="@string/comment" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>